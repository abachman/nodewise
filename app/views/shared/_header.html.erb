<div id="header_container" class="box_gradient">
  <div class='container'>
    <header class='span-24 last'>
      <h2><%= link_to "nodewise", root_url, :title => "Home"  %></h2> 

      <nav>
        <ul class="main_nav">
          <li><%= link_to "Members", members_path %></li>
          <% if user_signed_in? %>
            <% if can?(:manage, Invoice) %>
              <li><%= link_to "Finances", finances_path %></li>
            <% end %>
            <li><%= link_to_function "Voting", raw("showMessage('error', '<strong>exception</strong> NotImplemented ERROR DETECTED <strong>exception</strong>')") %></li>
            <li><%= link_to "Sign out", destroy_user_session_path %></li>
          <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </header>
  </div>
</div>
