<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>
    <% if content_for(:title) %>
      nodewise - <%= yield(:title) %>
    <% else %>
      nodewise membership system
    <% end %>
  </title>
  <meta name="description" content="">
  <meta name="author" content="">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <link href='http://fonts.googleapis.com/css?family=Inconsolata|Geo&subset=latin' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/stylesheets/blueprint/screen.css" type="text/css" media="screen, projection">
  <link rel="stylesheet" href="/stylesheets/blueprint/print.css" type="text/css" media="print">
  <!--[if lt IE 8]>
    <link rel="stylesheet" href="/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection">
  <![endif]-->
  <link rel="stylesheet" href="/stylesheets/master.css" type="text/css" media="screen, projection">

  <%= javascript_include_tag :defaults %>

  <%= stylesheet_link_tag 'plugins/simplemodal' %>

  <!--[if lt IE 7 ]>
    <script src="/javascripts/libs/dd_belatedpng.js"></script>
    <script> DD_belatedPNG.fix('img, .png_bg'); </script>
  <![endif]-->

  <script>
   var _gaq = [['_setAccount', 'UA-8597121-3'], ['_trackPageview']];
   (function(d, t) {
    var g = d.createElement(t),
        s = d.getElementsByTagName(t)[0];
    g.async = true;
    g.src = ('https:' == location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    s.parentNode.insertBefore(g, s);
   })(document, 'script');
  </script>

  <%= csrf_meta_tag %>
</head>
<body data-controller="<%= controller_name %>" data-action="<%= action_name %>">
  <%= render 'shared/header' %>

  <div id="container" class='container'>
    <div class='flash_wrapper'>
      <%- flash.each do |name, msg| -%>
        <% next unless msg.is_a?(String) %>
        <%= content_tag :div, :class => "flash", :id => "flash_#{name}" do %>
          <%= msg %>
          <a href='#' class='close'>X</a>
        <% end %>
      <%- end -%>
    </div>

    <div id="main">
      <%= yield %>
    </div>
    
    <hr/>
    <footer class='span-24 last'>
      <a href="http://baltimorenode.org">Baltimore Node Home</a> |
      track or contribute on <a href="https://github.com/abachman/nodewise">the nodewise github page</a>.
    </footer>
  </div> <!-- end of #container -->

  <%= yield :addendum %>
</body>
